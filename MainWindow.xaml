        </Label>
        <Label x:Name="label2" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Height="151" Width="348" FontSize="36" HorizontalContentAlignment="Stretch" ScrollViewer.CanContentScroll="True" UseLayoutRounding="True" Margin="140,0,0,0">
