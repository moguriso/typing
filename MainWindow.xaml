        </Label>
        <Label x:Name="label4" Content="Label" Margin="0,0,1,0" FontSize="90" ScrollViewer.CanContentScroll="True" UseLayoutRounding="True" HorizontalContentAlignment="Right" Width="212" VerticalContentAlignment="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom">
