        </Label>
        <Label x:Name="label4" Content="Label" Margin="0,0,10,0" FontSize="90" ScrollViewer.CanContentScroll="True" UseLayoutRounding="True" HorizontalContentAlignment="Right" Width="264" VerticalContentAlignment="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom">
