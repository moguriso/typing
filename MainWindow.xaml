            <Image.OpacityMask>
                <ImageBrush ImageSource="3CA-RGB.png"/>
            </Image.OpacityMask>
        </Image>
        <Label x:Name="label3" Content="Label" Margin="10,60,10,0" VerticalAlignment="Top" Height="331" FontSize="180" HorizontalContentAlignment="Center" Foreground="#FFFF00E8" ClipToBounds="True" SnapsToDevicePixels="True">
